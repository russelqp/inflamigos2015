#landingp
	width 100%
	padding 0
	margin 0 auto

	h3
		background-color #09f
		margin 25px auto
		border-radius 5px
		border 0px solid #fff

	article
		margin 0 auto
		width 100%
		padding 0
		text-align center

		header
			margin 0 auto 25px auto
			width 90%
			text-align center
			padding 0
			z-index 0

			img
				display block
				padding 0
				margin 0 auto
				width 100%
				z-index 1

			h1
				z-index 2
				position absolute
				margin 0 auto
				padding 5px 10px
				color #fff
				right 4%
				top 2%
				background-color rgba(37,150,252,0.9)
				display table

			p
				width 45%
				padding 0
				margin 0 auto
				display inline-block
				vertical-align middle
				background-color rgba(75,216,174,0.9)
				color #fff
				font-weight bold
				text-align center
				box-sizing border-box
				z-index 2
				position absolute
				left 5%
				top 7%

		#mini-galeria
			z-index 0
			margin 0 auto
			padding 0
			width 90%

			figure
				width 33%
				padding 0
				margin 0 auto
				display inline-block
				z-index 1
				position relative

				figcaption, .precio
					margin 0 auto
					padding 5px 10px
					box-sizing border-box

				figcaption
					z-index 4
					position absolute
					left 10px
					top 15px
					font-weight bold
					background-color rgba(255,255,255,.5)

				.precio
					background-color #fc3
					color #f0c
					z-index 4
					position absolute
					left 10px
					top 50px

					span
						margin 0 auto
						padding 5px 10px
						font-size 1.0em

				.reserva
					color #FFF
					padding 5px 15px
					background-color #88daa6
					z-index 4
					position absolute
					right 5%
					top 75%
					border-radius 4px
					display none

					span
						color #fff

				img
					margin 0 auto
					padding 0
					width 100%
					z-index 3
					position relative
					left 0px
					top 0px
					left 0px
					top 0px
					border-radius 25px 25px 25px 25px
					border 0px solid #000000

	ul
		width 80%
		text-align center
		font-size 1.5em
		margin 0 auto
		padding 10px

		li
			background-color #33FF79
			margin 10px auto
			padding 5px 10px
			list-style none
			display inline-block