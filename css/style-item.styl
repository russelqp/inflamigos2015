.lista-imagenes ul, .lista-imagenes li, 
	box-sizing border-box
	margin 0 auto
	color #F30
	padding 0 10px

.lista-imagenes
	display inline-block
	vertical-align top
	width 60%
	padding 2%
	text-align center
	margin 0 auto

.lista-imagenes h4
	text-align left
	margin 5px auto
	width 100%

.lista-imagenes ul
	padding 0
	margin 0
	text-align left

.lista-imagenes li
	display inline-block
	list-style-type none
	margin 2px 5px
	transition all 0.3s ease
	width 20%
	padding 0

.lista-imagenes li img
	width 100%
	padding 0
	border-radius 5px
	box-shadow 3px 3px 2px rgba(46, 49, 50, 0.3)
	border 1px solid #ccc

.lista-imagenes li:hover
	transform scale(1.08)

.lista-imagenes li img:hover
	box-shadow 0 0 5px #888

.datos
	display inline-block
	vertical-align top
	width 30%
	padding 2%


.menu_inflables_mini
	margin 0 auto 20px auto
	padding 0
	width 94%
	background-color #ffb600
	border-radius 5px
	text-align center

.menu_inflables_mini ul
	width 100%
	display block
	padding 0

.menu_inflables_mini li
	list-style none
	margin 0 2px
	padding 0
	text-decoration none
	width 120px
	display inline-block
	text-align center
	transition all .5s ease

.menu_inflables_mini li img
	width 100%
	padding 0
	margin 0
	height 100%

.menu_inflables_mini li:hover
	transform scale(1.05)

.menu_inflables_mini li img:hover
	box-shadow 0 0 5px #888

