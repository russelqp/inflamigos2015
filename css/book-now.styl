
#welcome #box-ofer
		width 30%
		margin 0 auto
		padding 0	
		display inline-block
		vertical-align top

#welcome #box-ofer	form
						display block
						margin 0 auto 5px auto
						padding 2px
						height 40%
						width 100%
						text-align center
						background-color #FFD700

						#user-email, #user-nombre
													border-radius 2px
													border solid 1px #FFF
													margin 2px auto
													height 2em
													width 45%
													display inline-block
													transition 0.7s ease all
													color #FE4900
													padding 5px 2px
						select
								border-radius 2px
								border solid 1px #FFF
								margin 2px auto
								height 2em
								width 94%
								display block
								transition 0.7s ease all
								color #FE4900
								padding 5px 2px


#welcome #box-sm
				margin 0 auto
				text-align center
				padding 2px 0
				background rgba(255,255,255,0.7)
				display inline-block
				vertical-align top
				height 40%
				width 100%

#welcome #box-sm ul li
	margin 2px
	padding 0
	display inline-block

#welcome #box-sm ul li a
						display inline-block
						vertical-align top
						padding 0
						font-size 1.8em
						color #D20033
						text-shadow 0 0 2px rgba(60,60,60,0.5)
						transition all 0.5s ease

#welcome #box-sm ul li a:hover
							color #00AF64
							transform scale(1.1)

.book-now-btn
		width 40%
		background red
		border solid 1px #ddd
		margin 2px 10px
		cursor pointer
		font-size 1.5em
		font-family Oswald, sans-serif
		color #fff
		display inline-block
		transition 0.7s ease all
		box-shadow inset 0px 1px 0px rgba(255,100,255,0.5), 0px 5px 0px 0px rgba(255,160,200,0.9), 0px 10px 5px #999
		border-radius 5px
		padding 5px 2px
		float right


.book-now-btn:hover, .book-now-btn:focus 
					color #dfe7ea
					box-shadow inset 0px 1px 0px rgba(255,255,255,0.5), 0px 2px 0px 0px rgba(255,255,255,0.5), 0px 2px 5px #999
	