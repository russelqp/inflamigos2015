@import "normalize.styl"
@import "../css/style-item.styl"
@import "/css/book-now.styl"

@charset "utf-8"
*
	margin 0
	padding 0


body
	background-color #eceff1
	color #010101
	font-family 'Noto Sans', sans-serif
	font-size 16px
	margin 0 auto
	padding 0

.menu_inflables
	width 100%
	margin 0 auto
	text-align center

.menu_inflables h3
	font-size 1.4em
	color #fff
	width 100%
	display block
	background-color #FF4900
	padding 5px
	text-align center
	border-radius 0

.menu_inflables h4
	color #ffff
	font-size 1em
	text-align center
	background-color #22C746
	font-family Arial

.menu_inflables h5
	font-size 1em
	text-align center
	color #5BF93F
	span
		color #22C746

.menu_inflables figure
	border-radius 3px
	background-color #fefefe
	color #333
	padding 10px
	margin 5px
	width 22%
	display inline-block
	vertical-align top
	transition 0.2s ease-out
	text-align center
	box-shadow 0 0 2px 1px rgba(46, 49, 50, 0.3)
	box-sizing border-box

	a
		text-decoration none

	p
		width 90%
		margin 10px 10px

	figcaption
		color #121212

	.btn_mas
		width 70%
		display block;
		margin 5px auto
		background-color #FF9100
		border-radius 2px
		color #fff
		box-shadow 0 0 5px #888
		text-align center
		padding 3px

	.btn_mas a:link
		color #ccc

	.btn_mas:hover
		background-color #f1053a
		color #fff

.btn_volver
	text-decoration none
	box-shadow 0 1px 0 0 #fff6af
	background linear-gradient(to bottom,#ffec64 5%,#ffab23 100%)
	border-radius 6px
	border 1px solid #fa2
	display inline-block
	cursor pointer
	color #333
	font-family arial
	font-size 15px
	font-weight bold
	padding 6px 24px
	text-decoration none
	text-shadow 0 1px 0 #fe6
	margin 0 auto
	text-align center

article
	.lista
		display none

.menu_inflables figure img
	width 100%
	padding 0
	margin 0
	border-radius 5px

.menu_inflables figure:hover
	transform scale(1.02,1.02);

footer
	margin 0 auto
	text-align center

@import "responsive.styl"